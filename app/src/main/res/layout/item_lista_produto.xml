<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/codigoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código: 455182"/>

        <TextView
            android:id="@+id/nomeProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome: Alcatra"/>

        <TextView
            android:id="@+id/barrasProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código de Barras: 123456789"/>

        <TextView
            android:id="@+id/estoqueProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estoque: 1"/>

        <LinearLayout
            android:id="@+id/btnEstoque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical"
            android:background="@color/teal_700">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Adicionar Estoque"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>